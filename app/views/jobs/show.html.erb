<h1><%= @job.title %></h1>

<h3><%= simple_format(@job.description) %></h3>

<%= image_tag @job.picture.url if @job.picture? %>

<%= form_for @job, html: {multipart: true} do |f| %>

  <%= f.file_field :picture %>
  <%= f.submit "Submit" %>
<% end %>


<div class="text-center">
  <%= link_to("投交简历", new_job_resume_path(@job), :style => "font-size: 30px; text-decoration: underline;")%>
</div>
