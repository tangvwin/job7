<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <td>
              职缺</td>
          <td>操作</td>
          
          <td>刊登时间</td>
      </tr>

  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>

    <%= render_job_status(job)%>

      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_job_path(job),:class => "btn btn-xs btn-primary") %>
      <%= link_to("Destroy", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-warning") %>

    <% if job.is_hidden %>
     <%= link_to("Public",publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success")%>
     <%else%>
     <%= link_to("Hide", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-danger")%>

     <%end%>





    </td>






    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
